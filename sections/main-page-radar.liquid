{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}
    px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}
    px;
  }

  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}
    px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}
    px;
  }

  .section-{{ section.id }}-height {
    height: {{ section.settings.height | times: 0.75 | round: 0 }}
    rem;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}
      px;
      padding-bottom: {{ section.settings.padding_bottom }}
      px;
    }
    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top }}
      px;
      margin-bottom: {{ section.settings.margin_bottom }}
      px;
    }
    .section-{{ section.id }}-height {
      height: {{ section.settings.height }}
      rem;
    }
  }
{%- endstyle -%}

<div class="page-width page-width--narrow section-{{ section.id }}-padding section-{{ section.id }}-margin section-{{ section.id }}-height">
  <h1 class="main-page-title page-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    {{ page.title | escape }}
  </h1>
  <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {{ page.content }}
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.main-page-radar.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      },
      {
        "type": "header",
        "content": "t:sections.all.margin.section_margin_heading"
      }, {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.margin.margin_top",
        "default": 36
      }, {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.margin.margin_bottom",
        "default": 36
      }, {
        "type": "header",
        "content": "t:sections.all.height.section_height_heading"
      }, {
        "type": "range",
        "id": "height",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "rem",
        "label": "t:sections.all.height.height",
        "default": 5
      }

    ]
  }
{% endschema %}