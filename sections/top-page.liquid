{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .top-page-text-container {
    text-align: center;
  }

  .top-page-text {
    display: inline-flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="top-page-text-container color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="top-page-text page-width">
    <div class="text-left">{{ section.settings.text-left }}</div>
    <div class="text-right">{{ section.settings.text-right }}</div>
  </div>
</div>

{% schema %}
  {
    "name": "Top page",
    "class": "top-page",
    "enabled_on": {
      "groups": ["header"]
    },
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-1"
      },
      {
        "type": "inline_richtext",
        "id": "text-left",
        "label": "Text left",
        "default": "Enter text left"
      },
      {
        "type": "inline_richtext",
        "id": "text-right",
        "label": "Text right",
        "default": "Enter text right"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 15
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 15
      }
    ],
    "presets": [
      {
        "name": "Top page"
      }
    ]
  }
{% endschema %}